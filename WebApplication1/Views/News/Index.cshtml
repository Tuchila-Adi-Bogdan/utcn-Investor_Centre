@model List<NewsArticle>

@{
    ViewData["Title"] = "News Room";
}

<h1>@ViewData["Title"]</h1>
<p>Welcome to the news room. Here are the latest articles:</p>

@foreach (var article in Model)
{
    <article class="card mb-4">
        <div class="row g-0">
            @if (!string.IsNullOrEmpty(article.ThumbnailUrl))
            {
                <div class="col-md-4">
                    <img src="@article.ThumbnailUrl" class="img-fluid rounded-start" alt="@article.Title">
                </div>
            }
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text">@article.Content</p>
                    @if (article.Effects.Any())
                    {
                        <p class="card-text"><strong>Affected Stocks:</strong></p>
                        <ul>
                            @foreach (var effect in article.Effects)
                            {
                                <li>@effect.Ticker: @effect.PriceChange.ToString("C")</li>
                            }
                        </ul>
                    }
                    <p class="card-text"><small class="text-muted">Published on @article.PublishedDate.ToShortDateString()</small></p>
                </div>
            </div>
        </div>
    </article>
}