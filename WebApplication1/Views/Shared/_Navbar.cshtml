@using Microsoft.AspNetCore.Identity
@using WebApplication1.Areas.Identity.Data
@inject SignInManager<InvestorCenterUser> SignInManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <div class="container-fluid">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">@ViewData["SiteTitle"]</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav flex-grow-1">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Trading" asp-action="Index">Trading</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">News</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Portfolio" asp-action="Index">Portfolio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-controller="Wallet" asp-action="Index">Wallet</a>
                    </li>
                }
            </ul>

            <partial name="_LoginPartial" />
        </div>
    </div>
</nav>